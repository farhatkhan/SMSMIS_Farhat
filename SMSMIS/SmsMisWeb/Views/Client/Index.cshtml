@model SmsMis.Models.Console.Client.cltUsers
@{
    ViewBag.Title = "Client Login";
    Layout = "~/Views/Shared/_LoginLayouts.cshtml";
}
<section id="loginForm">
    @using (Html.BeginForm("Index", "Client", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <table border="0" class="loginBox">
            <tr>
                <td colspan="2" class="tableTitle">@ViewBag.PageTitle</td>
            </tr>
            <tr>
                <td class="captionCell">@Html.LabelFor(m => m.userLogin)</td>
                <td class="inputCell">
                    @Html.TextBoxFor(m => m.userLogin, new { @class = "form-control", @dosbox = "true", value = "asif" })
                    @Html.ValidationMessageFor(m => m.userLogin)
                </td>
            </tr>
            <tr>
                <td class="captionCell">@Html.LabelFor(m => m.userPassword)</td>
                <td class="inputCell">
                    @Html.PasswordFor(m => m.userPassword, new { @class = "form-control", @dosbox = "true", value = "asif" })
                    @Html.ValidationMessageFor(m => m.userPassword)
                </td>
            </tr>
            <tr>
                <td class="captionCell">&nbsp;</td>
                <td class="inputCell"><input type="submit" id="btnSumbit" value="Log in" class="btn btn-default" dosbox="true" /></td>
            </tr>
            <tr>
                <td class="inputCellEmpty error-text" colspan="2">@ViewBag.errorMsg</td>
            </tr>
        </table>
    }
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}